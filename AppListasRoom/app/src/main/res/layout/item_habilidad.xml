<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/rosa_claro"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <!--    android:background="@color/purple_200"-->

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="76dp"
        android:layout_height="18dp"
        android:textColor="@color/azul_oscuro"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/tvMana"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TextView" />

    <TextView
        android:id="@+id/tvMana"
        android:layout_width="141dp"
        android:layout_height="20dp"
        android:textColor="@color/azul_base"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvManaText"
        app:layout_constraintTop_toBottomOf="@id/tvNombre"
        tools:text="TextView" />

    <TextView
        android:id="@+id/tvManaText"
        android:layout_width="41dp"
        android:layout_height="20dp"
        android:text="@string/mana"
        android:textColor="@color/azul_base"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNombre"
        app:layout_constraintVertical_bias="0.0">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>